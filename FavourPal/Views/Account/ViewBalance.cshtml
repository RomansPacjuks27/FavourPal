@model FavourPal.Models.BalanceViewModel

@{
    ViewData["Title"] = "Balance inquiry";
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Owed)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Owed)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Lent)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Lent)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Balance)
        </dt>
        <dd>
            @if (Model.Balance >= 0)
            {
                <span style="color:green">@Html.DisplayFor(model => model.Balance)</span>
            }
            else
            {
                <span style="color:red">@Html.DisplayFor(model => model.Balance)</span>
            }
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" onclick="location.href='@Url.Action("Index", "Home")'" value="Back to Home" class="btn btn-primary" />
        </div>
    </div>
</div>
