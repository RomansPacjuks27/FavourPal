@model List<FavourPal.Models.RequestViewModel>

@{
    ViewData["Title"] = "Your debts";
}

@Html.AntiForgeryToken()

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="row">
        <div class="text-center col-md-12 text-info"><h5>@TempData["DebtReturn"]</h5></div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.First().)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().AmountRequested)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @*@@Html.DisplayFor(modelItem => item.Email)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountRequested)
                </td>
                <td>
                    @Html.ActionLink("Pay", "PayDebt", item)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" onclick="location.href='@Url.Action("Index", "Home")'" value="Back to Home" class="btn btn-primary" />
        </div>
    </div>
</div>
